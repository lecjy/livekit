{
  "指定使用的JSON Schema，用于IDE自动补全和验证": "lecjy",
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "继承基础配置，包含 Renovate 的推荐设置": "lecjy",
  "extends": ["config:base"],

  "自动生成的 commit 消息的正文内容": "lecjy",
  "commitBody": "Generated by renovateBot",

  "依赖更新规则配置": "lecjy",
  "packageRules": [
    {
      "只在每周一早上6点前运行": "lecjy",
      "schedule": "before 6am every monday",

      "只针对 GitHub Actions 工作流文件": "lecjy",
      "matchManagers": ["github-actions"],

      "将所有 GitHub Actions 的更新合并为一个 PR": "lecjy",
      "groupName": "github workflows"
    },
    {
      "同样每周一早上6点前运行": "lecjy",
      "schedule": "before 6am every monday",

      "只针对 Dockerfile 中的依赖": "lecjy",
      "matchManagers": ["dockerfile"],

      "将所有 Docker 依赖更新合并为一个 PR": "lecjy",
      "groupName": "docker deps"
    },
    {
      "每周一早上6点前运行": "lecjy",
      "schedule": "before 6am every monday",

      "只针对 Go modules 依赖": "lecjy",
      "matchManagers": ["gomod"],

      "将所有 Go 依赖更新合并为一个 PR": "lecjy",
      "groupName": "go deps"
    },
    {
      "针对 Go modules": "lecjy",
      "matchManagers": ["gomod"],

      "匹配所有以 github.com/pion 开头的包（Pion WebRTC 库）": "lecjy",
      "matchPackagePrefixes": ["github.com/pion"],

      "将这些包单独分组": "lecjy",
      "groupName": "pion deps"
    },
    {
      "针对 Go modules": "lecjy",
      "matchManagers": ["gomod"],

      "匹配所有以 github.com/pion 开头的包（Pion WebRTC 库）": "lecjy",
      "matchPackagePrefixes": ["github.com/livekit"],

      "将这些包单独分组": "lecjy",
      "groupName": "livekit deps"
    }
  ],
  "更新后自动运行 go mod tidy 整理依赖": "lecjy",
  "postUpdateOptions": ["gomodTidy"]
}
